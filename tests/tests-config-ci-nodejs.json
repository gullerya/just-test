{
	"environments": [
		{
			"node": true,
			"tests": {
				"ttl": 300000,
				"maxFail": 0,
				"maxSkip": 0,
				"include": [
					"./tests/**/*.js"
				],
				"exclude": [
					"**/runner/*.js"
				]
			},
			"coverage": {
				"include": [
					"./src/**/*.js"
				],
				"reports": [
					{
						"format": "lcov"
					}
				]
			}
		}
	]
}
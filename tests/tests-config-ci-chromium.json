{
	"environments": [
		{
			"browser": {
				"type": "chromium",
				"executors": {
					"type": "iframe"
				},
				"importmap": {
					"imports": {
						"chai": "/libs/chai/chai.js"
					}
				}
			},
			"tests": {
				"ttl": 300000,
				"maxFail": 0,
				"maxSkip": 0,
				"include": [
					"./tests/**/*.js"
				],
				"exclude": [
					"**/tests/runner/**",
					"**/test-coverage-service.js"
				]
			},
			"coverage": {
				"include": [
					"./src/**/*.js"
				],
				"reports": [
					{
						"type": "lcov"
					}
				]
			}
		}
	]
}
{
	"name": "@gullerya/just-test",
	"version": "4.0.16",
	"description": "JavaScript multiplatform tests runner",
	"keywords": [
		"javascript",
		"testing",
		"framework",
		"multiplatform",
		"test",
		"tests",
		"coverage",
		"lcov",
		"test",
		"report",
		"results",
		"xUnit"
	],
	"license": "MIT",
	"author": {
		"name": "Guller Yuri",
		"email": "gullerya@gmail.com"
	},
	"homepage": "https://github.com/gullerya/just-test",
	"funding": "https://paypal.me/gullerya?locale.x=en_US",
	"repository": {
		"type": "git",
		"url": "https://github.com/gullerya/just-test"
	},
	"bugs": {
		"url": "https://github.com/gullerya/just-test/issues",
		"email": "gullerya@gmail.com"
	},
	"type": "module",
	"files": [
		"bin"
	],
	"exports": {
		".": "./bin/runner/just-test.js",
		"./assert": "./bin/common/assert-utils.js",
		"./random": "./bin/common/random-utils.js",
		"./timing": "./bin/common/time-utils.js"
	},
	"scripts": {
		"build": "node ./ci/build.ts",
		"lint": "npm run lint:runner && npm run lint:server",
		"lint:runner": "eslint -c ./ci/eslint.runner.js",
		"lint:server": "eslint -c ./ci/eslint.server.js",
		"test:dev": "npm run build && node ./bin/local-runner.js config_file=./tests/_configs/tests-config-dev.ts",
		"test:ci:chromium": "node ./bin/local-runner.js config_file=./tests/_configs/tests-config-ci-chromium.ts",
		"test:ci:firefox": "node ./bin/local-runner.js config_file=./tests/_configs/tests-config-ci-firefox.ts",
		"test:ci:webkit": "node ./bin/local-runner.js config_file=./tests/_configs/tests-config-ci-webkit.ts",
		"test:ci:nodejs": "node ./bin/local-runner.js config_file=./tests/_configs/tests-config-ci-nodejs.ts"
	},
	"dependencies": {
		"data-tier": "^3.6.6",
		"data-tier-list": "^2.2.1",
		"glob": "^12.0.0",
		"minimatch": "^10.1.1",
		"playwright": "^1.56.1",
		"rich-component": "^1.8.0",
		"typescript": "^5.9.3"
	},
	"devDependencies": {
		"@types/node": "^24.10.1",
		"@gullerya/just-test": "^4.0.14",
		"eslint": "^9.39.1",
		"esbuild": "^0.27.0"
	},
	"publishConfig": {
		"access": "public"
	}
}

{
	"name": "just-test",
	"version": "3.0.0-snapshot",
	"description": "JavaScript tests runner",
	"keywords": [
		"javascript",
		"testing",
		"framework",
		"test",
		"tests",
		"coverage",
		"lcov",
		"test",
		"report",
		"results",
		"xUnit"
	],
	"homepage": "https://github.com/gullerya/just-test",
	"bugs": {
		"url": "https://github.com/gullerya/just-test/issues",
		"email": "gullerya@gmail.com"
	},
	"license": "MIT",
	"files": [
		"bin"
	],
	"bin": {
		"just-test": "bin/local-runner.js"
	},
	"type": "module",
	"main": "bin/local-runner.js",
	"author": {
		"name": "Guller Yuri",
		"email": "gullerya@gmail.com"
	},
	"funding": "https://paypal.me/gullerya?locale.x=en_US",
	"repository": {
		"type": "git",
		"url": "https://github.com/gullerya/just-test"
	},
	"scripts": {
		"build": "node ./ci/tools/build.js",
		"lint:client": "eslint -c ./ci/.eslintrc.client.json \"./src/client/**/*.js\" \"./src/common/**/*.js\" \"./src/ui/**/*.js\" \"./tests/client/**/*.js\"",
		"lint:server": "eslint -c ./ci/.eslintrc.server.json \"./src/common/**/*.js\" \"./src/server/**/*.js\" \"./src/*.js\" \"./ci/**/*.js\" \"./tests/server/**/*.js\"",
		"test:dev": "npm run build && node ./src/local-runner.js config=./tests/tests-config-dev.json",
		"test:ci": "node ./bin/local-runner.js config=./tests/tests-config-ci-chromium.json",
		"test:ci:firefox": "node ./bin/local-runner.js config=./tests/tests-config-ci-firefox.json",
		"test:ci:webkit": "node ./bin/local-runner.js config=./tests/tests-config-ci-webkit.json",
		"test:ci:node": "npm run build && node ./bin/local-runner.js config=./tests/tests-config-ci-node.json"
	},
	"dependencies": {
		"chai": "^4.3.4",
		"data-tier": "^3.2.0",
		"data-tier-list": "^2.0.0",
		"es-module-shims": "^0.10.5",
		"glob": "^7.1.7",
		"playwright": "^1.11.1",
		"rich-component": "^1.8.0"
	},
	"devDependencies": {
		"eslint": "^7.26.0"
	}
}

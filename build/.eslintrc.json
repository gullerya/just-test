{
  "extends": "standard",
  "env": {
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      2,
      "tab",
      {
        "SwitchCase": 1
      }
    ],
    "no-tabs": 0,
    "semi": "off",
    "space-before-function-paren": "off",
    "object-curly-spacing": "off",
    "eol-last": "off",
    "one-var": "off"
  }
}